<div class="card-item col">
  {%- if extra.redirect -%}
  <a href="{{ extra.redirect }}">
  {%- else -%}
  <a href="{{ extra.url | relative_url }}">
  {%- endif -%}
    <div class="card hoverable">
      <div class="row g-0">
        {%- if extra.img -%}
        <div class="card-img col-md-6">
          {% responsive_image_block %}
            path: {{ extra.img }}
            alt: "extra thumbnail"
          {% endresponsive_image_block %}
        </div>
        <div class="col-md-6">
        {%- else -%}
        <div class="col-md-12">
        {%- endif -%}
          <div class="card-body">
            <h3 class="card-title text-lowercase">{{ extra.title }}</h3>
            <p class="card-text">{{ extra.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {%- if extra.github -%}
              <div class="github-icon">
                <div class="icon" data-toggle="tooltip" title="Code Repository">
                  <a href="{{ extra.github }}"><i class="fab fa-github gh-icon"></i></a>
                </div>
                {%- if extra.github_stars -%}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fas fa-star"></i>
                  <span id="{{ extra.github_stars }}-stars"></span>
                </span>
                {%- endif -%}
              </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>